<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="BBRCust">
    <class name="BBRVisit" table="visits">
        <id name="id" column="VIS_ID">
            <generator class="native"/>
        </id>
        <property name="timeScheduled" column="TIME_SCHEDULED"/>
        <property name="userName" column="USER_NAME"/>
        <property name="userContacts" column="USER_CONTACTS"/>
        <property name="status" column="STATUS"/>
        <many-to-one name="spec" column="SPEC_ID" class="BBRSpecialist" lazy="false" fetch="join"/>
        <many-to-one name="pos" column="POS_ID" class="BBRAcc.BBRPoS" lazy="false" fetch="join"/>
        <many-to-one name="procedure" column="PROC_ID" class="BBRProcedure" lazy="false" fetch="join"/>
    </class>
</hibernate-mapping>