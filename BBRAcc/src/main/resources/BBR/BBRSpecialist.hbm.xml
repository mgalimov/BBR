<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="BBRCust">
    <class name="BBRSpecialist" table="specialists">
        <id name="id" column="SPEC_ID">
            <generator class="native"/>
        </id>
        <property name="name" column="NAME"/>
        <property name="position" column="POSITION"/>
        <many-to-one name="user" column="USER_ID" class="BBRUser" lazy="false" fetch="join"/>
        <many-to-one name="pos" column="POS_ID" class="BBRPoS" lazy="false" fetch="join"/>
    </class>
</hibernate-mapping>