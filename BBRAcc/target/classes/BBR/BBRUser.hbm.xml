<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="BBRAcc">
    <class name="BBRUser" table="users">
        <id name="id" column="USER_ID">
            <generator class="native"/>
        </id>
        <property name="email" column="EMAIL"/>
        <property name="firstName" column="FIRSTNAME"/>
        <property name="lastName" column="LASTNAME"/>
        <property name="encodedPassword" column="PASS"/>
        <property name="approved" column="APPROVED"/>
        <property name="role" column="ROLE"/>
        <many-to-one name="shop" column="SHOP_ID" class="BBRAcc.BBRShop" lazy="false" fetch="select"/>
        <many-to-one name="pos" column="POS_ID" class="BBRAcc.BBRPoS" lazy="false" fetch="select"/>
    </class>
</hibernate-mapping>